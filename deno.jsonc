{
  "name": "@growilabs/code-hedgehog",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "author": "Yuki Takei <yuki@weseek.co.jp>",
  "exports": "./mod.ts",
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "strict": true
  },
  "workspace": ["./packages/action", "./packages/core", "./packages/processors/acme", "./packages/processors/dify", "./packages/processors/openai"],
  "imports": {
    "@biomejs/biome": "npm:@biomejs/biome@^1.9.4",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "zod": "npm:zod@^3.24.2",
    "gpt-tokenizer": "npm:gpt-tokenizer@^2.1.1"
  },
  "tasks": {
    "test": "deno test -A --parallel packages",
    "test:cov": "deno test -A --coverage=./cov packages && deno coverage ./cov",
    "lint": "deno run -A npm:@biomejs/biome check ./",
    "lint:fix": "deno run -A npm:@biomejs/biome check --write ./"
  },
  "lint": {
    "include": ["packages/"],
    "rules": {
      "exclude": ["no-explicit-any", "prefer-const", "no-unused-vars", "require-await", "no-slow-types", "no-inner-declarations"]
    }
  }
}
